{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "./", 
    "baseUrl": "."
  },
  "include": ["bin/**/*", "lib/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist"]
}